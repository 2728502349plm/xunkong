<Window x:Class="Xunkong.Desktop.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Xunkong.Desktop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Grid x:Name="Grid_Root" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Border x:Name="AppTitleBar"
                Height="32"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
            <TextBlock x:Name="TitleName"
                       Margin="12,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="12" />
        </Border>
        <Frame x:Name="Frame_Root" Margin="0,32,0,0" />
    </Grid>
</Window>
